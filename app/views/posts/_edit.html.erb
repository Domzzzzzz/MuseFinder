<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Edit this post</h3>
  </div>
  <div class="panel-body">
    <%= form_for @post, html: { multipart: true } do |f| %>
      <%= image_tag @post.image, class: 'img-responsive post-img' %> <br>
      <div class="form-group">
        <%= f.text_area :caption, placeholder: 'Write a short caption for your image', class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
        <div class="pull-right">
          <label class="btn btn-primary btn-file">
            Choose Image<%= f.file_field :image, style: 'display:none;' %>
          </label>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center">
  <%= link_to 'Cancel', posts_path %> |
  <%= link_to 'Delete', posts_path, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
</div>
