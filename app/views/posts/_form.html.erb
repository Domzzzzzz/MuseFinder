<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @post, html: { multipart: true } do |f| %>
      <div class="form-group">
        <label class="btn btn-primary btn-file">
          Choose Image<%= f.file_field :image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <%= f.text_area :caption, placeholder: 'Write a short caption for your image', class: 'form-control', autofocus: true %>
      </div>
    <% end %>
  </div>
</div>
