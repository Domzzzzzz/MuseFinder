<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Create a post</h3>
  </div>
  <div class="panel-body">
    <%= form_for @post, html: { multipart: true } do |f| %>

      <div class="form-group">
        <%= f.text_area :caption, placeholder: 'Write a short caption for your image', class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.submit "Post", class: 'btn btn-success' %>
        <div class="pull-right">
          <label class="btn btn-primary btn-file">
            Choose Image<%= f.file_field :image, style: 'display:none;' %>
          </label>
        </div>
      </div>
    <% end %>
  </div>
</div>
