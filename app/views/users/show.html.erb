<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-6">
    <div class="profile">
      <h1 class="page-header"><%= @user.name %></h1>
      <div class="row">
        <div class="col-md-4">
          <% if @user.avatar.exists? %>
            <%= link_to user_avatar_path(@user.name), remote: true, data: {toggle: 'modal', target: '#myModal'} do %>
              <%= image_tag(@user.avatar, class: 'img-responsive img-thumbnail') %>
            <% end %>
          <% else %>
            <%= link_to user_avatar_path(@user.name), remote: true, data: {toggle: 'modal', target: '#myModal'} do %>
              <%= image_tag('user.png', class: 'img-responsive img-thumbnail') %>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-8">
          <ul>
            <% if @user.name != nil %>
              <li><strong>Name:</strong> <%= @user.name %></li>
            <% else %>
              <li><strong>Name:</strong></li>
            <% end %>

            <% if @user.location != nil %>
              <li><strong>Location:</strong> <%= @user.location %></li>
            <% else %>
              <li><strong>Location:</strong></li>
            <% end %>

            <% if @user.sex != nil %>
              <li><strong>Gender:</strong> <%= @user.sex %></li>
            <% else %>
              <li><strong>Gender:</strong></li>
            <% end %>

            <% if @user.dob != nil %>
              <li><strong>Age:</strong> <%= age(@user.dob) %></li>
            <% else %>
              <li><strong>Age:</strong></li>
            <% end %>

            <% if @user.art_style != nil %>
              <li><strong>Art Style:</strong> <%= @user.art_style %></li>
            <% else %>
              <li><strong>Art Style:</strong></li>
            <% end %>

            <% if @user.about != nil %>
              <li class="about"><strong>About:</strong><span id="user-info"><%= @user.about %></span></li>
            <% else %>
              <li><strong>About:</strong></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div> <br>
    <div class="row">
      <div class="col-md-12">
        <% if current_user == @user %>
          <%= render 'posts/new' %>
        <% end %> <br>

        <div class="row">
          <div class="col-md-12">
            <% @posts.each do |post| %>
              <%= render 'posts/post', post: post %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render 'myfriends' %>
    <%= render 'chats' %>
  </div>
  <div class="col-md-1"></div>
</div>
