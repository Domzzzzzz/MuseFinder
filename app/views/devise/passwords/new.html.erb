<% if resource.errors.any? %>
  <%= devise_error_messages! %>
<% end %>

<%= render 'layouts/welcome' %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-4"> <br> <br>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Forgot your password?</h3>
      </div>

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <p>Enter your email address and you'll receive an email containing a link to change your password</p>

          <div class="form-group">
            <%= f.email_field :email, placeholder: 'Enter email', class: 'form-control', autofocus: true %>
          </div>

          <div class="actions">
            <%= f.submit "Send", class: 'btn btn-primary' %>
          </div>
        <% end %> <br>

        <%= link_to 'Log in', new_user_session_path %> |
        <%= link_to "Sign up", new_user_registration_path %>
    </div>
   </div>
  </div>

  <div class="col-md-6">
    <%= image_tag('unlock.jpg', class: 'img-responsive') %>
  </div>
  <div class="col-md-1"></div>

</div>
