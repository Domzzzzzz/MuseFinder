<% if resource.errors.any? %>
  <%= devise_error_messages! %>
<% end %>

<%= render 'layouts/welcome' %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-4"> <br>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sign up</h3>
      </div>

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder:'Confirm password', class: 'form-control', autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %> <br>

        <%= link_to 'I already have an account', new_user_session_path %>

      </div>
    </div>
  </div>

  <div class="col-md-6">
    <%= image_tag('art-class.jpg', class: 'img-responsive') %>
  </div>
  <div class="col-md-1"></div>
</div>
