<% if resource.errors.any? %>
  <%= devise_error_messages! %>
<% end %>

<%= render 'layouts/welcome' %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-4"> <br>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Log in</h3>
      </div>

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-primary' %>
          </div>
        <% end %> <br>

        <%= link_to "I don't have an account", new_user_registration_path %> |
        <%= link_to "I forgot my password", new_user_password_path %>

      </div>
    </div>
  </div>

  <div class="col-md-6">
    <%= image_tag('artsupplies.jpg', class: 'img-responsive') %>
  </div>
  <div class="col-md-1"></div>
</div>
